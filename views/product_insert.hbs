<div class="d-flex justify-content-center">
    <div class="px-5 custom-card">
        <form action="/main/san-pham" method="post" role="form" enctype="multipart/form-data">
            <div class="card-header">
                <h3>Insert Product</h3>
            </div>
            <div class="card-body">
            <div class="text-center">
                <p>Image</p>
                <img id="image-view" class="rounded-circle" alt="winter dog" width="150px" height="150px">
                <input id="image-file" onchange="onChangeFile()" type="file" name="image">
            </div>
            <label for="text" class="form-label">Name</label>
            <input type="text" class="form-control" placeholder="Product name" name="name">

            <label for="number">Price</label>
            <input type="number" class="form-control" placeholder="Product price"
                name="price">

            <label for="number">Quantity</label>
            <input type="number" class="form-control" placeholder="Product quantity"
                name="quantity">

            <label for="text">Description</label>
            <textarea type="text" class="form-control" placeholder="Product description"
                name="description"></textarea>


            <label for="number">Category Id</label>
            <select class="form-control" name="category_id">
                {{#each categories}}
                <option value="{{this._id}}">{{this.name}}</option>
                {{/each}}
            </select>

            <label>Released</label>
            <input type="date" class="form-control" placeholder="Product released date"
                name="released">

            <div class="form-froup text-center pt-3">
                <input type="submit" value="LÆ°u" class="btn btn-success">
            </div>
            </div>
        </form>
    </div>
</div>

<script>
    const onChangeFile = () => {
        const file = document.getElementById('image-file').files[0];
        const reader = new FileReader();
        reader.onload = e => {
            document.getElementById('image-view').src = e.target.result;
        }
        reader.readAsDataURL(file);
    }
</script>